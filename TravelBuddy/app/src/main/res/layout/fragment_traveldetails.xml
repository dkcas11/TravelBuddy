<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <fragment
        android:id="@+id/header_fragment"
        android:name="com.travelbuddy.casperriboe.travelbuddy.TravelDetails.TravelDetailsHeaderFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_traveldetails_header"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <fragment
        android:id="@+id/footer_fragment"
        android:name="com.travelbuddy.casperriboe.travelbuddy.TravelDetails.TravelDetailsFooterFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_fragment"
        android:layout_centerHorizontal="true"
        tools:layout="@layout/fragment_traveldetails_footer" />
</RelativeLayout>